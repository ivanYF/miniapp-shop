.container {
  font-size: 0; }
  .container view {
    display: inline-block;
    overflow: hidden; }
  .container .user-info {
    width: 100%;
    overflow: hidden;
    height: 400rpx;
    background-repeat: no-repeat;
    background-size: 100% auto;
    background-position: center center;
    background-color: #eee;
    margin-bottom: 30rpx; }
    .container .user-info .avg {
      width: 100%;
      overflow: hidden;
      text-align: center;
      margin-top: 120rpx; }
      .container .user-info .avg .img {
        display: inline-block;
        width: 140rpx;
        height: 140rpx;
        border-radius: 50%;
        border: 2rpx solid #fff;
        box-shadow: 0 0 3rpx #000; }
    .container .user-info .name {
      font-size: 32rpx;
      color: #fff;
      margin-top: 40rpx;
      display: inline-block;
      width: 100%;
      text-align: center;
      letter-spacing: 3rpx; }
  .container .user-sever {
    width: 100%;
    box-sizing: border-box;
    padding-left: 30rpx;
    background-color: #fff; }
    .container .user-sever .user-item {
      width: 100%;
      height: 100rpx;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1rpx solid #eee;
      position: relative; }
      .container .user-sever .user-item .icon {
        display: inline-block;
        width: 50rpx;
        height: 50rpx; }
      .container .user-sever .user-item .name {
        font-size: 30rpx;
        color: #666;
        padding: 0 40rpx;
        display: inline-block;
        flex: 1; }
      .container .user-sever .user-item:after {
        content: '';
        right: 30rpx;
        top: 50%;
        transform: translateY(-50%);
        display: inline-block;
        position: absolute;
        content: '';
        display: block;
        position: absolute;
        width: 16rpx;
        height: 16rpx;
        border-width: 2rpx;
        border-style: solid;
        border-color: #666 #666 transparent transparent;
        transform: translate(-50%, -50%) rotate(45deg);
        -moz-transform: translate(-50%, -50%) rotate(45deg);
        -ms-transform: translate(-50%, -50%) rotate(45deg);
        -webkit-transform: translate(-50%, -50%) rotate(45deg); }
